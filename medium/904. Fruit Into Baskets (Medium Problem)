class Solution:
    def totalFruit(self, fruits: List[int]) -> int:
        hashMap = collections.defaultdict(int)
        l, total, result = 0, 0, 0
        n = len(fruits)

        for r in range(n):
            hashMap[fruits[r]] += 1
            total += 1

            while len(hashMap) > 2:
                f = fruits[l]
                hashMap[f] -= 1
                total -= 1
                l += 1

                if not hashMap[f]:
                    hashMap.pop(f)

            result = max(result, total)

        return result
