class Solution:
    def dailyTemperatures(self, temperatures: List[int]) -> List[int]:
        n = len(temperatures)
        result = [0] * n
        st = []

        for i, t in enumerate(temperatures):
            while st and t > st[-1][0]:
                stack, index = st.pop()
                result[index] = i - index
            st.append([t, i])
        
        return result
